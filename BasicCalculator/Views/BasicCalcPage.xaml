<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BasicCalculator.ViewModels"
             x:Class="BasicCalculator.Views.BasicCalcPage"
             x:DataType="vm:BasicCalcViewModel">

    <Grid RowDefinitions="*, 78, 78, 78, 78, 78"
          ColumnDefinitions="*, *, *, *">

        <!--Input and Result-->

        <StackLayout Grid.Row="0"
                     Grid.Column="0"
                     Grid.ColumnSpan="4">
            
            <Label HorizontalOptions="End"
                   VerticalOptions="StartAndExpand"
                   Style="{StaticResource ResultLabelStyle}"
                   Text="{Binding Result}"/>
            
            <Label HorizontalOptions="End"
                   VerticalOptions="End"
                   Grid.ColumnSpan="4"
                   Style="{StaticResource InputLabelStyle}"
                   Text="{Binding Input}"/>
            
        </StackLayout>
        
        <!--Operator Buttons-->

        <Button Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource OperatorButtonStyle}"
                BackgroundColor="{StaticResource QuaternaryButton}"
                FontSize="22"
                Text="AC"
                Command="{Binding AllClearCommand}" />

        <Button Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource OperatorButtonStyle}"
                BackgroundColor="{StaticResource TertiaryButton}"
                Text="±"
                Command="{Binding NegateCommand}" />

        <Button Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource OperatorButtonStyle}"
                BackgroundColor="{StaticResource TertiaryButton}"
                FontSize="20"
                Text="%"
                Command="{Binding PercentageCommand}" />

        <Button Grid.Row="1"
                Grid.Column="3"
                Style="{StaticResource OperatorButtonStyle}"
                Text="÷"
                Command="{Binding OperatorCommand}"
                CommandParameter="/" />

        <Button Grid.Row="2"
                Grid.Column="3"
                Style="{StaticResource OperatorButtonStyle}"
                Text="x"
                Command="{Binding OperatorCommand}"
                CommandParameter="*" />

        <Button Grid.Row="3"
                Grid.Column="3"
                Style="{StaticResource OperatorButtonStyle}"
                Text="–"
                Command="{Binding OperatorCommand}"
                CommandParameter="-" />

        <Button Grid.Row="4"
                Grid.Column="3"
                Style="{StaticResource OperatorButtonStyle}"
                FontSize="28"
                Text="+"
                Command="{Binding OperatorCommand}"
                CommandParameter="+" />

        <Button Grid.Row="5"
                Grid.Column="3"
                Style="{StaticResource OperatorButtonStyle}"
                FontSize="28"
                Text="="
                Command="{Binding CalculateCommand}" />

        <!--Number Buttons-->

        <Button Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="7"
                Command="{Binding InputNumberCommand}"
                CommandParameter="7" />

        <Button Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="8"
                Command="{Binding InputNumberCommand}"
                CommandParameter="8" />

        <Button Grid.Row="2"
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="9"
                Command="{Binding InputNumberCommand}"
                CommandParameter="9" />

        <Button Grid.Row="3"
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="4"
                Command="{Binding InputNumberCommand}"
                CommandParameter="4" />

        <Button Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="5"
                Command="{Binding InputNumberCommand}"
                CommandParameter="5" />

        <Button Grid.Row="3"
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="6"
                Command="{Binding InputNumberCommand}"
                CommandParameter="6" />

        <Button Grid.Row="4"
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text="1"
                Command="{Binding InputNumberCommand}"
                CommandParameter="1" />

        <Button Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="2"
                Command="{Binding InputNumberCommand}"
                CommandParameter="2" />

        <Button Grid.Row="4"
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="3"
                Command="{Binding InputNumberCommand}"
                CommandParameter="3" />

        <Button Grid.Row="5"
                Grid.Column="0"
                Style="{StaticResource NumberButtonStyle}"
                Text=","
                Command="{Binding InputNumberCommand}"
                CommandParameter="," />

        <Button Grid.Row="5"
                Grid.Column="1"
                Style="{StaticResource NumberButtonStyle}"
                Text="0"
                Command="{Binding InputNumberCommand}"
                CommandParameter="0" />

        <Button Grid.Row="5"
                Grid.Column="2"
                Style="{StaticResource NumberButtonStyle}"
                Text="←"
                Command="{Binding DeleteCommand}" />

    </Grid>

</ContentPage>
